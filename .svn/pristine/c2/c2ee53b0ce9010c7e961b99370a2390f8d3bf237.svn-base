
.mat-form-field{
	width:100%;
}

.table thead th{
	vertical-align:middle;
}
.txt-msg-block{
	border:1px solid #ccc;
	padding:5px;
	background:rgb(247, 248, 248);
}
.txt-msg-block p{
	margin-bottom:0px;
	font-size:12px;
}
.outbound-input{
	width:60px;
}
.outbound-footer{
	background:linear-gradient(to top, #fff 50%, #E7E3E3 150%) !important;
	padding:10px 7px 7px 7px !important;
	border:1px solid #ccc;
	position: absolute;
    bottom: 0px;
    width: 100%;
}

.left-block{
	max-width: 80%;
    float: left;
}
.right-block{
	margin-right: 0%;
    float: right;
    text-align: right;
    max-width: 100%;
}
.cat__wizard .steps ul li{
	
	    -webkit-box-flex: 200;
    -ms-flex-positive: 200;
    flex-grow: 200;
    float: none;
    width: auto;
    position: relative;
    list-style-type: none;
}
.cat__wizard .steps ul li.disabled:before, .cat__wizard .steps ul li.disabled:after {
    background: #bfc0c0;
}
.cat__wizard .steps ul li.disabled .cat__wizard__steps__icon, .cat__wizard .steps ul li.disabled .number {
    border-color: #fff;
    background: #bfc0c0;
    color: #000;
}
.disabled > a > i{
	color:#000;
	font-weight:600;	
}
