expandChildRows(childrow,itemId,icon,index){
    if($("#plus-"+index).is(":visible")){
        $("#plus-"+index).hide();
        $("#minus-"+index).show();
        $("."+childrow+"-"+itemId).show();
    }else{
        if($("#minus-"+index).is(":visible")){
            $("#plus-"+index).show();
            $("#minus-"+index).hide();
        }
        $("."+childrow+"-"+itemId).hide(); 
    }
    
}
