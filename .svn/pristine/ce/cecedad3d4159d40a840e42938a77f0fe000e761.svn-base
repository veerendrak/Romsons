@media only screen and (max-width: 767px){
.cat__wizard .steps ul li:before, .cat__wizard .steps ul li:after {
    position: absolute;
    content: '';
    display: block;
    width: 97%;
    top: 0.7rem;
    right: 0;
    height: 0.60rem;
    background: rgb(34, 190, 239);
    z-index: 1;
}
}

.cat_wizard_steps_title {
    display: block;
    text-align: left;
    color:#02615c;
    font-family: 'Open Sans';
    font-size: 14px;
    font-weight:600;
}
.forgotOk{
	padding:3px 13px 3px 13px;
}
.forgotOk:hover{
	padding:3px 13px 3px 13px;
}
.forgotOk:active{
	padding:3px 13px 3px 13px;
}
.create-edit-pop-txt-box{
	padding: 5px !important;
}
.asterick{
	
    color: red;
    font-size: 15px;
	top: 0 !important;
}

.bootstrap-datetimepicker-widget {
   z-index:1000000 !important;
}
.btn-disabled{
	cursor: not-allowed;
}
.billing-table-scroll{
	
	display:block; overflow-x:auto;overflow-y:hidden;
}
@media only screen and (max-width: 1024px){	
.right-block{
	float:left;
	left:0;
  }	
.right-block button{
	margin-top:12px;
	margin-bottom:0;
	float:left;
	left:0;
  }	
  .left-block{
	max-width: 80%;
    float: left;
    min-width:35%;
    margin-bottom:0;
   }
   table td {min-width:130px;}
   table td:first-child {min-width:50px;}
}
