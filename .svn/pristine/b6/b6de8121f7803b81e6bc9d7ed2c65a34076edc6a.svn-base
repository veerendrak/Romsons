                    }
                    if (!items.hasOwnProperty('mat_desc')) {
                        listObj.mat_desc = " ";
                    }
                    else {
                        listObj.mat_desc = items.mat_desc;
                    }
                    if (!items.hasOwnProperty('mat_quan')) {
