@media only screen and (max-width: 767px){
.cat__wizard .steps ul li:before, .cat__wizard .steps ul li:after {
    position: absolute;
    content: '';
    display: block;
    width: 97%;
    top: 0.7rem;
    right: 0;
    height: 0.60rem;
    background: rgb(34, 190, 239);
    z-index: 1;
}
}

.cat_wizard_steps_title {
    display: block;
    text-align: left;
    color:#02615c;
    font-family: 'Open Sans';
    font-size: 14px;
    font-weight:600;
}
.forgotOk{
	padding:3px 13px 3px 13px;
}
.forgotOk:hover{
	padding:3px 13px 3px 13px;
}
.forgotOk:active{
	padding:3px 13px 3px 13px;
}
.bootstrap-datetimepicker-widget .picker-switch td span {
    line-height: 2.5;
    height: 2.5em;
    width: 100%;
    z-index: 99999 !important;
}
#outboundDeliveryModal .bootstrap-datetimepicker-widget{
	position:fixed !important;
	top:102px !important;
}

.popup-button-block {border-top:1px solid #ccc; width:100%;}
.popup-button-block button{padding:5px 20px; float:right; display:block; margin-top:10px}
#cancel-outbound-delivery .mb-5 {margin-bottom:10px !important;}
#cancel-outbound-delivery .card-block {padding:0 !important;}
#cancel-outbound-delivery table {width:100% !important; display:table;}


